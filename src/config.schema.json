{
  "pluginAlias": "EweLink",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "EweLink"
      },
      "email": {
        "title": "email for Ewelink account",
        "type": "string",
        "required": true,
        "default": ""
      },
      "password": {
        "title": "password for Ewelink account",
        "type": "string",
        "required": true,
        "default": ""
      },
      "region": {
        "title": "region/server location to access ewelink from",
        "type": "string",
        "required": true,
        "default": "cn"
      },
      "real_time_update": {
        "title": "flag to enable updates through ewelink websockets",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "real_time_tolerance_window": {
        "title": "window in seconds for how long to wait before applying a real time update",
        "type": "number",
        "required": false,
        "default": 5
      }
    }
  }
}